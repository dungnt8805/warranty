@model IEnumerable<warranty_management.Models.Production>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Default.cshtml";
}
<h3 style="text-align: center"><span class="glyphicon glyphicon-tasks"></span>Danh sách sản phẩm</h3>
<div class="col-ld-10 col-md-9">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="span2">Id</th>
                    <th class="span6">Tên sản phẩm</th>
                    <th class="span6">Chủng loại</th>
                    <th class="span6">Nhà sản xuất</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Specie.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Manufacturer.Name)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

