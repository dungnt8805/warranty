@model warranty_management.Models.Manufacturer
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Default.cshtml";
}
<div class="container" style="margin-top: 25px">
    <h3>
        <span class="glyphicon glyphicon-pencil"></span>Thêm nhà sản xuất mới
    </h3>
    @using (Html.BeginForm("Edit", "Manufacturers", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.ManufacturerName, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.ManufacturerName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ManufacturerName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Nation, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Nation, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nation)
            </div>
        </div>
        <hr/>
        <div class="col-lg-2">
			<button type="submit" class="btn btn-success btn-sm">Lưu</button>
		</div>
        
    }
</div>
